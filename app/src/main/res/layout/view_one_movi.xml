<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_rectangle__view_films"
    tools:context=".MovieDetailsActivity">

    <FrameLayout
        android:id="@+id/frame0"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/imageBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner_0"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageMask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_mask_from_svg"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mask_png"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/textReviews2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/video_duration"
        android:textColor="@color/reviews_gray"
        android:textSize="@dimen/text_size_8"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <ImageView
        android:id="@+id/imagLike"
        android:layout_width="16dp"
        android:layout_height="14dp"

        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_like" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="8dp"
        android:shadowColor="@color/shadow_gray"
        android:shadowDx="@dimen/shadow_x"
        android:shadowDy="@dimen/shadow_y"
        android:shadowRadius="@dimen/shadow_radius"
        android:singleLine="false"
        android:text="@string/movie_name_view"
        android:textColor="@color/name_gray"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame0" />

    <TextView
        android:id="@+id/textTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="22dp"
        android:singleLine="false"
        android:text="@string/tag_text"
        android:textColor="@color/tag_color"
        android:textSize="@dimen/text_size_8"
        app:layout_constraintBottom_toBottomOf="@+id/frame0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageStar4"
        android:layout_width="@dimen/star_wh_one_movi"
        android:layout_height="@dimen/star_wh_one_movi"
        android:layout_marginStart="2dp"
        android:layout_marginTop="@dimen/star_top_one_movi"
        app:layout_constraintStart_toEndOf="@+id/imageStar3"
        app:layout_constraintTop_toBottomOf="@+id/textTag"
        app:srcCompat="@drawable/ic_star_icon_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageStar1"
        android:layout_width="@dimen/star_wh_one_movi"
        android:layout_height="@dimen/star_wh_one_movi"
        android:layout_marginStart="2dp"
        android:layout_marginTop="@dimen/star_top_one_movi"
        app:layout_constraintStart_toEndOf="@+id/imageStar0"
        app:layout_constraintTop_toBottomOf="@+id/textTag"
        app:srcCompat="@drawable/ic_star_icon_on"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageStar3"
        android:layout_width="@dimen/star_wh_one_movi"
        android:layout_height="@dimen/star_wh_one_movi"
        android:layout_marginStart="2dp"
        android:layout_marginTop="@dimen/star_top_one_movi"
        app:layout_constraintStart_toEndOf="@+id/imageStar2"
        app:layout_constraintTop_toBottomOf="@+id/textTag"
        app:srcCompat="@drawable/ic_star_icon_on"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageStar0"
        android:layout_width="@dimen/star_wh_one_movi"
        android:layout_height="@dimen/star_wh_one_movi"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/star_top_one_movi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTag"
        app:srcCompat="@drawable/ic_star_icon_on"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="@string/reviews_text_view"
        android:textColor="@color/reviews_gray"
        android:textSize="@dimen/text_size_8"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageStar4"
        app:layout_constraintTop_toBottomOf="@+id/textTag" />

    <ImageView
        android:id="@+id/imageStar2"
        android:layout_width="@dimen/star_wh_one_movi"
        android:layout_height="@dimen/star_wh_one_movi"
        android:layout_marginStart="2dp"
        android:layout_marginTop="@dimen/star_top_one_movi"
        app:layout_constraintStart_toEndOf="@+id/imageStar1"
        app:layout_constraintTop_toBottomOf="@+id/textTag"
        app:srcCompat="@drawable/ic_star_icon_on"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/imagePG"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rectangle"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textPG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/pg"
        android:textColor="@color/white"
        android:textSize="@dimen/pg_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagePG"
        app:layout_constraintEnd_toEndOf="@+id/imagePG"
        app:layout_constraintStart_toStartOf="@+id/imagePG"
        app:layout_constraintTop_toTopOf="@+id/imagePG"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>